{
  "compilerOptions": {
    // Project options
    "composite": true,
    "declaration": true,
    "incremental": true,
    "jsx": "react",
    "module": "esnext",
    "outDir": "lib",
    "rootDir": "src",
    "target": "es2017",
    // Strict check options
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strict": true,
    "strictBindCallApply": false,
    "strictNullChecks": false,
    // Module resolution options
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    // Linter checks options
    "noUnusedLocals": true,
    // Advanced options
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    // Command line options
    "preserveWatchOutput": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
